</template>

<script>
import wx from "wepy";
import http from "../utils/request.js";
import config from "../config";
import mixin from "../mixins/redux";
import findFlow from "../components/findFlow";
export default class introSuccess extends wx.page {
  config = {
    navigationBarBackgroundColor: "#fff",
    navigationBarTitleText: "给TA引荐"
  };
  mixins = [mixin];
  components = {
    findFlow: findFlow
  };
  data = {
    version: config.version,
    code: "",
    type: 1,
    typeSuccess: 1,
    redPacket: "",
    intro: "",
    phone: "",
    introducerCode: "",
    referrer: "",
    introUserId: "",
    introSuccessId: "",
    recordId: "",
    creator_avatarUrl: "",
    introducer_avatarUrl: "",
    introducered_avatarUrl: ""
  };

  bindReferee(e) {
    this.phone = e.detail.value;
  }
  //被引荐人提交数据
  toIntroducered(e) {
    let that = this;
    let a = {
      record_id: that.recordId,
      intro_user_id: that.introUserId,
      wx_introducered_code: that.phone
    };
    let b = {
      id: that.recordId
    };
    let introed = that.phone;
    if (!introed) {
      wx.showModal({
        content: "被引荐人为空!",
        showCancel: false,
        confirmText: "知道了",
        confirmColor: "#F86136"
      });
    } else {
      // 被推荐人提交数据后引荐成功信息页面详情
      http.request(
        "App.Find_Record.GetOperRecord",
        "POST",
        b,
        res => {
          console.log("App.Find_Record.GetOperRecord:", res);
          let state = res.oper_state;
          if (state == 1) {
            // 被引荐人提交数据
            http.request(
              "App.Find_IntroSuccessRecord.Intro",
              "POST",
              a,
              res => {
                console.log("App.Find_IntroSuccessRecord.Intro", res);
                if (res && res.id > 0) {
                  that.introSuccessId = res.id;
                  that.type = 2;
                  that.typeSuccess = 1;
                  let b = {
                    id: that.recordId
                  };
                  // 被推荐人提交数据后引荐成功信息页面详情
                  http.request(
                    "App.Find_Record.GetOperRecord",
                    "POST",
                    b,
                    res => {
                      console.log("App.Find_Record.GetOperRecord", res);
                      that.introducered_avatarUrl =
                        res.wx_introducered_avatarUrl;
                      that.phone = res.wx_introducered_code;
                      that.$apply();
                    },
                    err => {},
                    {
                      noToast: true
                    }
                  );
                }
              }
            );
          } else {
            wx.showModal({
              content: "过期失效 或 引荐成功",
              showCancel: false,
              confirmText: "知道了",
              confirmColor: "#F86136"
            });
          }
          that.$apply();
        },
        err => {},
        {
          noToast: true
        }
      );
    }
  }
  //获取被推荐人联系方式
  getRefereePhoneNumber(e) {
    let that = this;
    console.log(e.detail.errMsg, e.detail.iv, e.detail.encryptedData);
    if (e.detail.errMsg === "getPhoneNumber:fail user deny") {
      wx.showModal({
        title: "提示",
        showCancel: false,
        content: "请允许授权",
        success: function(res) {}
      });
    } else {
      http.request(
        "App.Find_User.GetPhoneNumber",
        "POST",
        {
          encryptedData: e.detail.encryptedData,
          iv: e.detail.iv
        },
        res => {
          if (res) {
            that.phone = res;
            that.$apply();
          } else {
            wx.showModal({
              content: "授权失败，请重试",
              showCancel: false,
              confirmText: "好的"
            });
          }
        },
        err => {}
      );
    }
  }
  copyReferrer() {
    let that = this;
    wx.setClipboardData({
      data: that.referrer,
      success: function(res) {
        wx.getClipboardData({
          success: function(res) {
            wx.showToast({
              title: "复制成功",
              icon: "success",
              duration: 1000
            });
          }
        });
      }
    });
  }
  copyReferee() {
    let that = this;
    wx.setClipboardData({
      data: that.referee,
      success: function(res) {
        wx.getClipboardData({
          success: function(res) {
            wx.showToast({
              title: "复制成功",
              icon: "success",
              duration: 1000
            });
          }
        });
      }
    });
  }
  //小程序分享
  onShareAppMessage() {
    let that = this;
    let recordId = that.recordId;
    let introUserId = that.introUserId;
    let introSuccessId = that.introSuccessId;
    let type = 2;
    let typeSuccess = 2;
    return {
      title: "送红包：Hi，给你推荐个朋友",
      path:
        "pages/introSuccess?type=" +
        type +
        "&recordId=" +
        recordId +
        "&introSuccessId=" +
        introSuccessId,
      imageUrl: "",
      success: res => {
        // 分享成功
      },
      fail: res => {
        // 分享失败
      }
    };
  }
  onMoneyTip() {
    wx.showModal({
      content: "引荐人、被引荐人平分红包",
      showCancel: false,
      confirmText: "知道了",
      confirmColor: "#F86136"
    });
  }
  onLoad(options) {
    console.log(options);
    let that = this;
    let type = options.type;
    that.type = type;
    let typeSuccess = options.typeSuccess;
    that.typeSuccess = typeSuccess;
    let recordId = options.recordId;
    that.recordId = recordId;
    let introUserId = options.introUserId;
    that.introUserId = introUserId;

    let introSuccessId = options.introSuccessId;
    that.introSuccessId = introSuccessId;
    if(!introSuccessId) {
      let param = {
        id: that.recordId,
      };
      // 被推荐人提交数据后引荐成功信息页面详情
      http.request(
        "App.Find_Record.GetOperRecord",
        "POST",
        param,
        res => {
          console.log("onLoad->App.Find_Record.GetOperRecord", res);

          that.redPacket = res.money;
          that.intro = res.intro;
          that.code = res.code;
          that.creator_avatarUrl = res.wx_creator_avatarUrl;
          that.introducer_avatarUrl = res.wx_introducer_avatarUrl;
          that.introducered_avatarUrl = res.wx_introducered_avatarUrl;
          that.phone = res.wx_introducered_code;
          that.referrer = res.wx_introducer_code;
          that.$apply();
        },
        err => {},
        {
          noToast: true
        }
      );
    }else{
      let param = {
        id: that.recordId,
        intro_user_id: that.introUserId
      };
      http.request(
        "App.Find_Record.GetIntroRecord",
        "POST",
        param,
        res => {
            console.log("res_onload", res);
            that.redPacket = res.money;
            that.intro = res.intro;
            that.code = res.code;
            that.creator_avatarUrl = res.wx_creator_avatarUrl;
            that.introducer_avatarUrl = res.wx_introducer_avatarUrl;
            that.referrer = res.wx_introducer_code;
            that.$apply();
          },
          err => {},
          {
            noToast: true
          }
     );
    }
  }
}
</script>

